include ./includes/links.pug

body
    .products
        include ./includes/nav.pug
        main
            -let brandId = 0;
            h2.product-title #{title}
            include ./includes/product-filter.pug
            .brands-all-products
                .brand-names
                    .brand-names-container
                        for category in categories
                            a(href=`http://localhost:8000/watch/brand/${category.category}`) #{category.category}
                            if category.category === title
                                -brandId = category.id;
                .brand-products
                    .brand-sections
                        for watch in watches
                            if watch.categoryId === brandId
                                .product-quick-view
                                    img(alt=`${watch.alt}` src=`${watch.image}`)
                                    p #{watch.type}
                                    p #{watch.name}
                                    p $#{watch.price}
                                    a(href=`http://localhost:8000/watch/${watch.id}`) Full View
        include ./includes/footer.pug 